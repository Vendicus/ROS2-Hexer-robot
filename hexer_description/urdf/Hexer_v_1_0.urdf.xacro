<?xml version="1.0"?>
<robot name="hexer_v_1_0" xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <xacro:include filename="material.urdf.xacro" />
    <xacro:include filename="base.urdf.xacro" />

    <link name="ground" />
    <joint name="ground_base_link" type="fixed">
        <parent link="base_link" />
        <child link="ground" />
        <origin xyz="0 0 -0.225" rpy="0 0 0" />
    </joint>

    <xacro:macro name="leg_left" params="prefix origin_x origin_y origin_z">
        <link name="${prefix}_coxa_left_link">
            <visual>
                <geometry>
                    <mesh filename="package://hexer_description/mesh/leg/coxa_left.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="-0.0095 -0.02 -0.015" rpy="0 0 0" />
                <material name="coxa" />
            </visual>
        </link>
        <link name="${prefix}_femur_left_link">
            <visual>
                <geometry>
                    <mesh filename="package://hexer_description/mesh/leg/femur.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0 -0.035 -0.051" rpy="0 0 0" />
                <material name="femur" />
            </visual>
        </link>
        <link name="${prefix}_femur_left_two_link">
            <visual>
                <geometry>
                    <mesh filename="package://hexer_description/mesh/leg/femur_two.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="-0.024 -0.01 -0.051" rpy="0 0 ${pi}" />
                <material name="femur" />
            </visual>
        </link>
        <link name="${prefix}_tibia_left_link">
            <visual>
                <geometry>
                    <mesh filename="package://hexer_description/mesh/leg/tibia_right.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0.01 -0.001 -0.0725" rpy="0 0 ${-pi / 2.0}" />
                <material name="tibia" />
            </visual>
        </link>

        <joint name="${prefix}_coxa_left_base" type="revolute">
            <parent link="base_link" />
            <child link="${prefix}_coxa_left_link" />
            <origin xyz="${origin_x} ${origin_y} ${origin_z}" rpy="0 0 ${-pi / 2.0}" />
            <axis xyz="0 0 1" />
            <limit lower="${-pi / 2.0}" upper="${pi / 2.0}" velocity="100" effort="100" />
        </joint>
        <joint name="${prefix}_femur_left_coxa" type="revolute">
            <parent link="${prefix}_coxa_left_link" />
            <child link="${prefix}_femur_left_link" />
            <origin xyz="-0.038 -0.0508 0.018" rpy="0 0 0" />
            <axis xyz="1 0 0" />
            <limit lower="${-pi / 2.0}" upper="${pi / 2.0}" velocity="100" effort="100" />
        </joint>
        <joint name="${prefix}_femur_left_two_femur" type="fixed">
            <parent link="${prefix}_femur_left_link" />
            <child link="${prefix}_femur_left_two_link" />
            <origin xyz="0.065 0 0" rpy="0 0 0" />
        </joint>
        <joint name="${prefix}_tibia_left_femur" type="revolute">
            <parent link="${prefix}_femur_left_link" />
            <child link="${prefix}_tibia_left_link" />
            <origin xyz="0.01 -0.07 0" rpy="0 0 0" />
            <axis xyz="1 0 0" />
            <limit lower="${-pi / 2.0}" upper="${pi / 2.0}" velocity="100" effort="100" />
        </joint>
    </xacro:macro>

    <xacro:leg_left prefix="down"  origin_x="-0.04" origin_y="0.069" origin_z="-0.046" />
    <xacro:leg_left prefix="mid"  origin_x="-0.08" origin_y="-0.001" origin_z="-0.046" />
    <xacro:leg_left prefix="up"  origin_x="-0.04" origin_y="-0.069" origin_z="-0.046" />

    <xacro:macro name="leg_right" params="prefix origin_x origin_y origin_z">
        <link name="${prefix}_coxa_right_link">
            <visual>
                <geometry>
                    <mesh filename="package://hexer_description/mesh/leg/coxa_right.stl" scale="0.001 0.001 0.001" />
                </geometry>
                <origin xyz="-0.067 0.0435 -0.0025" rpy="0 0 ${-pi / 2.0}" />
                <material name="coxa" />
            </visual>
        </link>
        <link name="${prefix}_femur_right_link">
            <visual>
                <geometry>
                    <mesh filename="package://hexer_description/mesh/leg/femur.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0.035 0 -0.051" rpy="0 0 ${-pi / 2.0}" />
                <material name="femur" />
            </visual>
        </link>
        <link name="${prefix}_femur_right_two_link">
            <visual>
                <geometry>
                    <mesh filename="package://hexer_description/mesh/leg/femur_two.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0.06 0.023 -0.051" rpy="0 0 ${-3.0*pi / 2.0}" />
                <material name="femur" />
            </visual>
        </link>
        <link name="${prefix}_tibia_right_link">
            <visual>
                <geometry>
                    <mesh filename="package://hexer_description/mesh/leg/tibia_left.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0.003 -0.01875 -0.19525" rpy="0 0 ${pi}" />
                <material name="tibia" />
            </visual>
        </link>


        <joint name="${prefix}_coxa_right_base" type="revolute">
            <parent link="base_link" />
            <child link="${prefix}_coxa_right_link" />
            <origin xyz="${origin_x} ${origin_y} ${origin_z}" rpy="0 0 0" />
            <axis xyz="0 0 1" />
            <limit lower="${-pi / 2.0}" upper="${pi / 2.0}" velocity="100" effort="100" />
        </joint>
        <joint name="${prefix}_femur_right_coxa" type="revolute">
            <parent link="${prefix}_coxa_right_link" />
            <child link="${prefix}_femur_right_link" />
            <origin xyz="0.0508 0.0385 0.018" rpy="0 0 0" />
            <axis xyz="0 1 0" />
            <limit lower="${-pi / 2.0}" upper="${pi / 2.0}" velocity="100" effort="100" />
        </joint>
        <joint name="${prefix}_femur_right_two_femur" type="fixed">
            <parent link="${prefix}_femur_right_link" />
            <child link="${prefix}_femur_right_two_link" />
            <origin xyz="0 -0.065 0" rpy="0 0 0" />
        </joint>
        <joint name="${prefix}_tibia_right_femur" type="revolute">
            <parent link="${prefix}_femur_right_link" />
            <child link="${prefix}_tibia_right_link" />
            <origin xyz="0.07 -0.01 0" rpy="0 0 0" />
            <axis xyz="0 1 0" />
            <limit lower="${-pi / 2.0}" upper="${pi / 2.0}" velocity="100" effort="100" />
        </joint>
    </xacro:macro>

    <xacro:leg_right prefix="down" origin_x="0.04" origin_y="0.069" origin_z="-0.046" />
    <xacro:leg_right prefix="mid" origin_x="0.08" origin_y="0" origin_z="-0.046" />
    <xacro:leg_right prefix="up" origin_x="0.04" origin_y="-0.069" origin_z="-0.046" />

</robot>